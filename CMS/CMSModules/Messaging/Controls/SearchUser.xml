    <action name="ignore" caption="$Messaging.IgnoreList.Add$" fonticonclass="icon-times-circle" fonticonstyle="critical" commandargument="{0}" confirmation="$messaging.ignorelist.addconfirmation$" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="formattedusername" sort="UserName" caption="$general.UserName$" wrap="false" />
