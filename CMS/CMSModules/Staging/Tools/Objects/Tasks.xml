<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="view" externalsourcename="view" caption="$General.View$" fonticonclass="icon-eye" fonticonstyle="allow" />
    <action name="synchronize" caption="$general.synchronize$" fonticonclass="icon-rotate-double-right" />
    <action name="delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$Tasks.ConfirmDelete$" />
  </actions>
  <columns>
    <column source="TaskTitle" caption="$tasks.headertitle$" sort="TaskTitle" wrap="false" maxlength="100" cssclass="main-column-100" >
      <tooltip source="TaskTitle" width="0" />
    </column>
    <column source="TaskType" caption="$Tasks.HeaderType$"  />
    <column source="TaskTime" caption="$tasks.headertime$" externalsourcename="TaskTime" wrap="false"  />
    <column source="##ALL##" caption="$tasks.headerresult$" externalsourcename="TaskResult"  />
  </columns>
  <pager>
    <key name="PageSizeOptions" value="10,15,25,50,100,##ALL##" />
    <key name="DefaultPageSize" value="15" />
  </pager>
  <options>
    <key name="ShowSelection" value="true" />
    <key name="SelectionColumn" value="TaskID" />
  </options>
</grid>